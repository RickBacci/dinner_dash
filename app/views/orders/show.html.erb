<h1>Order</h1>
<br>
<br>
<div class="shopping-cart">

  <div class="column-labels">
    <label class="product-image">Image</label>
    <label class="product-details">Product</label>
    <label class="product-price">Price</label>
    <label class="product-quantity">Quantity</label>
    <label class="product-line-price">Total</label>
  </div>

  <% @order_items.each do |order_item| %>
  <div class="product">
    <div class="product-image">
      <%= image_tag order_item.item.picture.url(:thumb) %><br>
    </div>
    <div class="product-details">
      <div class="product-title"><%= order_item.item.title %></div>
      <p class="product-description"><%= order_item.item.description %></p>
    </div>
    <div class="product-price"><%= order_item.item.price %> </div>
    <div class="product-quantity">
      <input type="number" value=<%= order_item.quantity %> min="1">
    </div>
    <div class="product-line-price">
      <%= order_item.item.price * order_item.quantity %>
  <br>
<br>
<br>
<br>
<br>
<br>
<br>
</div>
<%end %>

  <div class="totals">
    <div class="totals-item">
      <label>Subtotal</label>
      <div class="totals-value" id="cart-subtotal">
        <%= @order_items.map {|order_item| order_item.quantity * order_item.item.price}.reduce(:+)%>
      </div>
    </div>
    <div class="totals-item">
      <label>Shipping</label>
      <div class="totals-value" id="cart-shipping">15.00</div>
    </div>
  </div>
</div>

