<div class="centered">
  <% @category.items.each do |item| %>
    <span class="item">
      <%= image_tag item.picture.url(:medium) %><br>
      <%= item.title %><br>
      <%= item.description %><br>
      <%= item.price %><br>
      <%= button_to "Add To Cart", carts_path(item_id: item.id) %>
      <%= link_to "View Item", item_path(item) %> <br>

      <%= link_to "Retire", admin_category_item_path(@category, item), method: :put %>
      <%= link_to "Delete", admin_item_path(item), method: :delete %><br>
    </span>
  <% end %>
</div>
