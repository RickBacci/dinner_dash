<div class="centered">
  <% @items.each do |item| %>
    <span class="item">
      <%= image_tag item.picture.url(:medium) %><br>
      <%= item.title %><br>
      <%= item.description %><br>
      <%= item.price %><br>
      <%= button_to "Add To Cart", carts_path(item_id: item.id) %>
      <%= link_to "View Item", item_path(item) %> <br>

        <%= link_to "Retire", admin_item_status_path(item), method: :put %>
       <br>
    </span>
  <% end %>
</div>

