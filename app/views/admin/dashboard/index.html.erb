<h1>Admin Dashboard</h1>
<%= link_to "Create Item", new_admin_item_path %><br />
<%= link_to "Create Category", new_admin_category_path %>
<br>
<br>
<% @orders.each do |order| %>
  <%= link_to order.id, admin_order_path(order.user.id, order) %>
  :
  <%= order.status %>
  <%= link_to "Mark as Paid", edit_admin_order_path(order, order: {status: 'pay'}), methods: 'put' if order.may_pay? %> <br>
  <%= link_to "Mark as Completed", edit_admin_order_path(order, order: {status: 'complete'}), methods: 'put' if order.may_complete? %> <br>
  <%= link_to "Mark as Cancelled", edit_admin_order_path(order, order: {status: 'cancel'}), methods: 'put' if order.may_cancel? %> <br><br><br>
<% end %>
