<h1>Admin Dashboard</h1>
<%= link_to "Create Item", new_item_path %>


<%= form_for [:admin, @item], url: items_path, html: { :multipart => true } do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <% if @item.picture.exists? %>
      <%= image_tag @item.picture.url %><br/>
    <%= f.label :picture, "Attach a New Picture" %><br />
    <%= f.file_field :picture %>
  <% end %>
  <%= f.label :picture, "Attach Picture" %>
  <%= f.file_field :picture %>

  <%= f.submit "Create Item" %>
<% end %>

