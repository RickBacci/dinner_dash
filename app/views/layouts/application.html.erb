<!DOCTYPE html>
<html>
<head>
  <title>DinnerDash</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <ul class="navigation">
    <li class="nav-item"><a href="/categories">Categories</a></li>
    <li class="nav-item"><a href="/items">Items</a></li>
    <li class="nav-item"><a href="/cart">Cart <%= @cart.count_all %></a></li>
    <% if current_user %>
      <li class="nav-item"><a href="/users/<%= current_user.id%>/orders">Orders</a></li>
      <li class="nav-item"><a rel="nofollow" data-method="delete" href="/logout">Logout</a></li>
    <% else %>
      <li class="nav-item"><a href="/login">Login</a></li>
      <li class="nav-item"><a href="/users/new">Signup</a></li>
    <% end %>

    <% if current_admin? %>
    <li class="nav-item"><a rel="nofollow" data-method="get" href="/admin/dashboard">Admin</a></li>
    <% end %>
  </ul>


  <input type="checkbox" id="nav-trigger" class="nav-trigger" />
  <label for="nav-trigger"></label>

  <div class="site-wrap centered">
<%= flash[:notice] %> <br>

<%= yield %>
  </div>
</body>
</html>
