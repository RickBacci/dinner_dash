<h1>Signup</h1>
<br>

<%= form_for @user do |f| %>
  <%= f.text_field :name, placeholder: "Name" %><br>

  <%= f.text_field :email_address, placeholder: "Email" %><br>

  <%= f.text_field :username, placeholder: "Username" %><br>

  <%= f.password_field :password, placeholder: "Password" %><br><br>

  <%= f.submit %>
<% end %>
